<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.neo4j</groupId>
        <artifactId>neo4j-front-end-parent</artifactId>
        <version>5.26.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- NOTE!! -->
    <!-- This project will be deleted once builds are updated!!! -->

    <modelVersion>4.0.0</modelVersion>
    <artifactId>neo4j-cypher-ast-factory-tests</artifactId>
    <packaging>jar</packaging>
    <name>Cypher Parser Tests</name>

    <description>Cypher Parser Tests</description>
    <url>http://components.neo4j.org/${project.artifactId}/${project.version}</url>

    <scm>
        <connection>scm:git:git://github.com/neo4j/neo4j.git</connection>
        <developerConnection>scm:git:git@github.com:neo4j/neo4j.git</developerConnection>
        <url>https://github.com/neo4j/neo4j</url>
    </scm>

    <properties>
        <moduleName>org.neo4j.cypher.internal.ast.factory.neo4j</moduleName>
    </properties>

    <profiles>
        <profile>
            <id>skip-open-cypher-ast</id>
            <activation>
                <property>
                    <name>skipOpenCypherAst</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skipTests>true</skipTests>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <skipTests>true</skipTests>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
