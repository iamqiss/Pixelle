#!/usr/bin/env bash

# CONTROLLING STARTUP:
#
# This script relies on a few environment variables to determine startup
# behavior, those variables are:
#
#   DENSITY_PATH_CONF -- Path to config directory
#   DENSITY_JAVA_OPTS -- External Java Opts on top of the defaults set
#
# Optionally, exact memory values can be set using the `DENSITY_JAVA_OPTS`. Example
# values are "512m", and "10g".
#
#   DENSITY_JAVA_OPTS="-Xms8g -Xmx8g" ./bin/density

set -e -o pipefail

source "`dirname "$0"`"/density-env

CHECK_KEYSTORE=true
DAEMONIZE=false
for option in "$@"; do
  case "$option" in
    -h|--help|-V|--version)
      CHECK_KEYSTORE=false
      ;;
    -d|--daemonize)
      DAEMONIZE=true
      ;;
  esac
done

if [ -z "$DENSITY_TMPDIR" ]; then
  DENSITY_TMPDIR=`"$JAVA" "$XSHARE" -cp "$DENSITY_CLASSPATH" org.density.tools.launchers.TempDirectory`
fi

# get keystore password before setting java options to avoid
# conflicting GC configurations for the keystore tools
if [[ $CHECK_KEYSTORE = true ]] \
    && bin/density-keystore has-passwd --silent
then
  if [[ ! -z "${KEYSTORE_PASSWORD}" ]]; then
    echo "Using value of KEYSTORE_PASSWORD from the environment"
  else
    if ! read -s -r -p "Density keystore password: " KEYSTORE_PASSWORD ; then
      echo "Failed to read keystore password on console" 1>&2
      exit 1
    fi
  fi
fi

# The JVM options parser produces the final JVM options to start Density.
# It does this by incorporating JVM options in the following way:
#   - first, system JVM options are applied (these are hardcoded options in the
#     parser)
#   - second, JVM options are read from jvm.options and jvm.options.d/*.options
#   - third, JVM options from DENSITY_JAVA_OPTS are applied
#   - fourth, ergonomic JVM options are applied
DENSITY_JAVA_OPTS=`export DENSITY_TMPDIR; "$JAVA" "$XSHARE" -cp "$DENSITY_CLASSPATH" org.density.tools.launchers.JvmOptionsParser "$DENSITY_PATH_CONF"`

# manual parsing to find out, if process should be detached
if [[ $DAEMONIZE = false ]]; then
  exec \
    "$JAVA" \
    "$XSHARE" \
    $DENSITY_JAVA_OPTS \
    -Ddensity.path.home="$DENSITY_HOME" \
    -Ddensity.path.conf="$DENSITY_PATH_CONF" \
    -Ddensity.distribution.type="$DENSITY_DISTRIBUTION_TYPE" \
    -Ddensity.bundled_jdk="$DENSITY_BUNDLED_JDK" \
    -cp "$DENSITY_CLASSPATH" \
    org.density.bootstrap.Density \
    "$@" <<<"$KEYSTORE_PASSWORD"
else
  exec \
    "$JAVA" \
    "$XSHARE" \
    $DENSITY_JAVA_OPTS \
    -Ddensity.path.home="$DENSITY_HOME" \
    -Ddensity.path.conf="$DENSITY_PATH_CONF" \
    -Ddensity.distribution.type="$DENSITY_DISTRIBUTION_TYPE" \
    -Ddensity.bundled_jdk="$DENSITY_BUNDLED_JDK" \
    -cp "$DENSITY_CLASSPATH" \
    org.density.bootstrap.Density \
    "$@" \
    <<<"$KEYSTORE_PASSWORD" &
  retval=$?
  pid=$!
  [ $retval -eq 0 ] || exit $retval
  if [ ! -z "$DENSITY_STARTUP_SLEEP_TIME" ]; then
    sleep $DENSITY_STARTUP_SLEEP_TIME
  fi
  if ! ps -p $pid > /dev/null ; then
    exit 1
  fi
  exit 0
fi

exit $?
