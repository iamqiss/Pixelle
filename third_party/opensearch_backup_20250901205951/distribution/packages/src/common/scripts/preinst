#!/usr/bin/env bash
#
# This script is executed in the pre-installation phase
#
#   On Debian,
#       $1=install : indicates an new install
#       $1=upgrade : indicates an upgrade
#
#   On RedHat,
#       $1=1       : indicates an new install
#       $1=2       : indicates an upgrade

set -e -o pipefail

err_exit() {
    echo "$@" >&2
    exit 1
}

# source the default env file
if [ -f "${path.env}" ]; then
    . "${path.env}"
fi

export DENSITY_PATH_CONF=${DENSITY_PATH_CONF:-${path.conf}}

case "$1" in

    # Debian ####################################################
    install|upgrade)

        # Create density group if not existing
        if ! getent group density > /dev/null 2>&1 ; then
            echo -n "Creating density group..."
            addgroup --quiet --system density
            echo " OK"
        fi

        # Create density user if not existing
        if ! id density > /dev/null 2>&1 ; then
            echo -n "Creating density user..."
            adduser --quiet \
                    --system \
                    --no-create-home \
                    --home /nonexistent \
                    --ingroup density \
                    --disabled-password \
                    --shell /bin/false \
                    density
            echo " OK"
        fi
    ;;
    abort-deconfigure|abort-upgrade|abort-remove)
    ;;

    # RedHat ####################################################
    1|2)

        # Create density group if not existing
        if ! getent group density > /dev/null 2>&1 ; then
            echo -n "Creating density group..."
            groupadd -r density
            echo " OK"
        fi

        # Create density user if not existing
        if ! id density > /dev/null 2>&1 ; then
            echo -n "Creating density user..."
            useradd --system \
                    --no-create-home \
                    --home-dir /nonexistent \
                    --gid density \
                    --shell /sbin/nologin \
                    --comment "density user" \
                    density
            echo " OK"
        fi
    ;;

    *)
        err_exit "pre install script called with unknown argument \`$1'"
    ;;
esac

${scripts.footer}
