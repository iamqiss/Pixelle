#!/usr/bin/env bash

# This wrapper script allows SystemD to feed a file containing a passphrase into
# the main Density startup script

set -e -o pipefail

if [ -n "$DENSITY_KEYSTORE_PASSPHRASE_FILE" ] ; then
  exec /usr/share/density/bin/density "$@" < "$DENSITY_KEYSTORE_PASSPHRASE_FILE"
else
  exec /usr/share/density/bin/density "$@"
fi
